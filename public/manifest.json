{
  "name": "Alert-Me",
  "description": "提醒我",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "declarativeContent", "storage", "notifications", "activeTab", "scripting", "alarms"],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "192": "drink.png"
  }
}
